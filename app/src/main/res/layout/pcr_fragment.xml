<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="pcrViewModel"
            type="com.onurkanbakirci.szutestosgb.ui.fragments.PCRViewModel" />
    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="@{pcrViewModel.pcrNotFoundVisibility}"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_not_found"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/not_found_pcr"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pcr_recycle_view"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:onClick="@{pcrViewModel::newPCR}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/inp_horizontal"
            android:layout_marginVertical="@dimen/inp_vertical"
            android:src="@drawable/ic_add"
            app:maxImageSize="40dp"
            android:backgroundTint="@color/green"
            />
    </RelativeLayout>
</layout>
