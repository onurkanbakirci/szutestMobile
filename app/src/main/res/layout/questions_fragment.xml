<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="questionsViewModel"
            type="com.onurkanbakirci.szutestosgb.ui.fragments.QuestionsViewModel" />
    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questions_recycle_view"
            />
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="@{questionsViewModel.progressOfQuestion}"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:onClick="@{questionsViewModel::finishForm}"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="@dimen/inp_horizontal"
                android:layout_marginVertical="@dimen/inp_vertical"
                android:src="@drawable/ic_send"
                android:backgroundTint="@color/green"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:onClick="@{questionsViewModel::closeForm}"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/inp_horizontal"
                android:layout_marginVertical="@dimen/inp_vertical"
                android:src="@drawable/ic_close"
                android:backgroundTint="@color/colorAccent"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>
